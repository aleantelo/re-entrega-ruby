 <%= link_to "<button type='button' class='btn btn-outline-secondary btn-sm' ><img src = 'https://icongr.am/fontawesome/mail-reply.svg?size=26&color=currentColor'></button>".html_safe, sucursals_path%>
<div class="container">
<h3> <%= t('.title')%> </h3>
    <%= form_with model: @sucursal do |form| %>
            <div>
                <% if @sucursal.errors.any? %>
                    <div id="error_explanation">
                        <ul>
                            <% @sucursal.errors.full_messages.each do |message| %>
                                <li style="color:#FF0000"><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
            </div>

            <div class="form-group">
                <%= form.label :nombre %>
                <%= form.text_field :nombre, :placeholder => "Nombre", :class => "form-control", :style => 'width: 200px;'%>
            </div>

            <div class="form-group">
                <%= form.label :direccion %>
                <%= form.text_field :direccion, :class => "form-control", :placeholder => "Direccion", :style => 'width: 200px;'%>
            </div>
            
            <div class="form-group">
                <%= form.label :telefono %>
                <%= form.text_field :telefono, :placeholder => "Telefono", :class => "form-control", :style => 'width: 200px;'%>
            </div>

            <%= form.submit 'Aceptar', :class => "btn btn-outline-success btn-sm" %>
    <%end%>
</div>
