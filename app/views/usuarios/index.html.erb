 <%= link_to "<button type='button' class='btn btn-outline-secondary btn-sm' ><img src = 'https://icongr.am/fontawesome/mail-reply.svg?size=26&color=currentColor'></button>".html_safe, '/'%>
<div class="container"> 
  <h3> <%= t('.title')%> </h3>
    <%= link_to "<button class='btn btn-outline-success btn-sm'>Agregar personal</button>".html_safe, new_personal_path%> 
    <%= link_to "<button class='btn btn-outline-success btn-sm'>Agregar admin</button>".html_safe, new_admin_path%> 
  <table class="table table-striped">
    <thead class="table-success">
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Ver</th>
        <th scope="col">Editar</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>    
                       
          <tr>
            <td scope="row"><%=user.email%></td>
            <td scope="row">
              <%= link_to "<button class='btn btn-outline-info btn-sm'><img src='https://icongr.am/material/account.svg?size=26&color=currentColor'></button>".html_safe, usuario_path(user.id, admin: :true)%>
            </td>
            <% if user.rol != "Admin" %>
            <td scope="row">
            <%= link_to "<button class='btn btn-outline-warning btn-sm'><img src='https://icongr.am/material/account-edit.svg?size=26&color=currentColor'></button>".html_safe, edit_usuario_path(user.id)%> 
            </td> 
            <td scope="row">
              <%= button_to destroy_usuario_path(user.id), method: :delete, :class => "btn btn-outline-danger btn-sm"  do %>
                  <span ><img src='https://icongr.am/material/account-remove.svg?size=26&color=currentColor'></span>
              <% end %>
            </td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
  </table>
</div>
  